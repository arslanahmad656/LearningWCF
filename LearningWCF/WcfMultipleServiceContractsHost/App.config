<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <startup> 
      <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.7.2" />
  </startup>

  <system.serviceModel>
    <behaviors>
      <serviceBehaviors>
        <behavior name="mexBehaviour">
          <serviceMetadata httpGetEnabled="true"/>
        </behavior>
      </serviceBehaviors>
    </behaviors>
    <services>
      <service name="WcfMultipleServiceContracts.MultipleContractService" behaviorConfiguration="mexBehaviour">
        <host>
          <baseAddresses>
            <add baseAddress="http://localhost:45981/"/>
            <add baseAddress="net.tcp://localhost:45982/"/>
          </baseAddresses>
        </host>
        <endpoint address="WcfMultipleServiceContracts" binding="basicHttpBinding" contract="WcfMultipleServiceContracts.IPublicService"/>
        <endpoint address="WcfMultipleServiceContracts" binding="netTcpBinding" contract="WcfMultipleServiceContracts.IPublicService"/>
        <endpoint address="mex" binding="mexHttpBinding" contract="IMetadataExchange"/>
      </service>
    </services>
  </system.serviceModel>
</configuration>